/**
 *
 * @author trent
 */
public class cookieCalories {
    public static void main(String[] args) {
        Scanner keyboard = new Scanner(System.in);
        System.out.println("Please enter the amount of cookies eaten");
        double numberOfEatenCookies = keyboard.nextDouble();
        
        double numberOfCaloriesConsumed = (numberOfEatenCookies / 4) * 300;
        
        System.out.println("The total number of calories consuemd is equal to " + numberOfCaloriesConsumed);
                
    }
}
